{
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "moment": true,
    "_": true
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-var": [
      "error"
    ],
    "space-unary-ops": [
      "warn"
    ],
    "space-infix-ops": [
      "warn"
    ],
    "space-before-blocks": [
      "warn"
    ],
    "arrow-spacing": [
      "warn"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-array-constructor": [
      "error"
    ],
    "keyword-spacing": [
      "warn"
    ],
    "no-undefined": [
      "error"
    ],
    "require-await": [
      "warn"
    ],
    "no-unused-expressions": [
      "error"
    ],
    "no-eq-null": [
      "error"
    ]
  }
}